
<div class="row ">

  <div class="col s3 ">


    <h2 class="flow-text">Add a New burger</h2>
    <form class="create-update-form blue-grey darken-2" action="burgers/create" method="POST">

      <div class="form-group">
        <label for="bu">Burger Name:</label>
        <input type="text" id="bu" name="name">
      </div>


      <button type="submit">Add Burger</button>
    </form>
  </div>
  <div class="col s5">



    <h2 class="flow-text">Burgers you can still clog your arteries with!</h2>

    <ul>
      {{#each burgers}}
        {{#unless this.devoured}}
          <li class="blue-grey lighten-3">
            {{this.name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="true">
              <button type="submit">Eat me fatty!</button>
            </form>

            {{> burgers/delete-burger}}
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col s4">

    <h2 class="flow-text">Burgers that you should probably puke up later!</h2>

    <ul>
      {{#each burgers}}
        {{#if this.devoured}}
          <li class="blue-grey lighten-3">
            {{this.name}}

            <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
              <input type="hidden" name="devoured" value="false">
              <button type="submit">Make that burger again, I want to devolpe type 2!</button>
            </form>

            {{> burgers/delete-burger}}
          </li>
        {{/if}}
      {{/each}}
    </ul>
    </div>

</div>
